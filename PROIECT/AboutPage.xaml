<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PROIECT.AboutPage"
             Title="AboutPage">
    <VerticalStackLayout Spacing="10" Margin="10">
        <HorizontalStackLayout Spacing="10">
            <Image Source="minge.jpg"
                    SemanticProperties.Description="My Players List"
                    HeightRequest="64" />
            <Label FontSize="22" FontAttributes="Bold" Text="My Player
Lists" VerticalOptions="End" />
            <Label FontSize="22" Text="v1.0" VerticalOptions="End" />
        </HorizontalStackLayout>
        <Label Text="This app will help you to manage your players" />
        <Button Text="Reset Database" 
            BackgroundColor="Red" 
            TextColor="White" 
            Clicked="OnDeleteDatabaseClicked" 
            Margin="10" />
    </VerticalStackLayout>
</ContentPage>